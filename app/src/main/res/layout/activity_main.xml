<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context="com.example.imageview.functionimageviews.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="两种圆形Imageview"
            android:layout_marginTop="20dp"/>

        <com.example.imageview.functionimageviews.imageview.YuanJiaoImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/test3"/>

        <com.example.imageview.functionimageviews.imageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/test7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正方形Imageview"
            android:layout_marginTop="20dp"/>

        <com.example.imageview.functionimageviews.imageview.SqureImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/test4"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置比例Imageview,比例为1:0.75"
            android:layout_marginTop="20dp"/>

        <com.example.imageview.functionimageviews.imageview.RatioImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:height_to_width_ratio="0.75"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:background="@mipmap/test2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下是自适应高度ImageView展示原图"
            android:layout_marginTop="20dp"/>

        <com.example.imageview.functionimageviews.imageview.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test3"
            android:layout_marginTop="20dp"/>


        <com.example.imageview.functionimageviews.imageview.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test7"/>

        <com.example.imageview.functionimageviews.imageview.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test4"/>

        <com.example.imageview.functionimageviews.imageview.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test2"/>

    </LinearLayout>
</ScrollView>

